= render :partial => "layouts/navbar"

-#col-xs-12 col-sm-2 col-md-3
%div.container
  %div.row
    - @movies_recent.reverse.each do |movie|
      %div{:class => "col-xs-6 col-sm-4 col-md-4 col-lg-3", :style => "display:inline-block;"}
        %div
          = movie[1][:date]
        -#%a{:href => "#{movie[1][:movie]}"}
        %div{:style => "background:url('#{movie[1][:logo]}')no-repeat; width: 250px; height: 375px; display:inline-block;"}