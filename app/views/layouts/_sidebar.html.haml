%div.bradflix-sidebar
  %ul.nav.sidebar
    %li.recently-added
      %a{:href => "/movies/recent"} Recently Added
    %li.recently-watched
      %a{:href => "/movies/recently_watched"} Recently Watched
    %li.alphabetically
      %a{:href => "/movies"} Alphabetically
    %li.tv
      %a{:href => "/tv/"} TV Shows
    - @all_movie_years.each do |movie_list_by_year|
      %li{:class => "#{movie_list_by_year[0].downcase}"}
        %a{:href => "/movies/#{movie_list_by_year[0]}"} #{movie_list_by_year[0]}